<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppThemeDialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar.IgnoreCutout">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="AppTheme.NavOverlay">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NavOverlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Linear.Holo">
        <item name="android:background">@drawable/holo_background_blue</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Linear.Padding.Holo">
        <item name="android:background">@drawable/holo_background_blue</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Linear.Holo.Pink">
        <item name="android:background">@drawable/holo_background_pink</item>
    </style>

    <style name="Linear.Holo.Orange">
        <item name="android:background">@drawable/holo_background_orange</item>
    </style>

    <style name="Linear.Holo.Cyan">
        <item name="android:background">@drawable/holo_background_cyan</item>
    </style>

    <style name="Linear.Holo.Red">
        <item name="android:background">@drawable/holo_background_red</item>
    </style>

    <style name="Linear.Padding.Holo.Pink">
        <item name="android:background">@drawable/holo_background_pink</item>
    </style>

    <style name="Linear.Padding.Holo.Orange">
        <item name="android:background">@drawable/holo_background_orange</item>
    </style>

    <style name="Linear.Padding.Holo.Cyan">
        <item name="android:background">@drawable/holo_background_cyan</item>
    </style>

    <style name="Linear.Padding.Holo.Red">
        <item name="android:background">@drawable/holo_background_red</item>
    </style>

    <style name="Linear.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Linear.Horizontal.Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Linear.Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Outer" parent="Linear">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="OuterPadding" parent="Linear.Padding">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alignmentMode">alignBounds</item>
        <item name="android:columnOrderPreserved">true</item>
    </style>

    <style name="Grid.Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="GridCard" parent="Linear.Padding">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Text.Fit">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Text.Heading">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Large.Center">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Text.Right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Text.Mono">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Scroll">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="LoginProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="colorControlNormal">@color/muted</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/muted</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Button.Fit">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Login">
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme.NavOverlay.NoActionBar">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">64dp</item>
    </style>

    <style name="Card.Holo">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Column.2">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>


    <!-- Main menu styling: -->

    <style name="MainCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:elevation">8dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>


    <style name="MainTitle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">8dp</item>
    </style>


    <style name="MainIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainIcon.Vert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="KnowledgeAnswer">
        <item name="android:background">@drawable/holo_background_blue</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="KnowledgeRow" parent="Linear.Horizontal">
        <item name="android:weightSum">2</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
