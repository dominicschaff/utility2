<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/OuterPadding"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/ll_main"
        style="@style/Linear.Holo.Pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="@integer/column_count"
        android:columnOrderPreserved="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goto_osm_maps"
            style="@style/MainTitle"
            android:text="Maps"
            app:drawableTopCompat="@drawable/ic_main_maps" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goto_notes"
            style="@style/MainTitle"
            android:text="Notes"
            app:drawableTopCompat="@drawable/ic_note" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goto_download"
            style="@style/MainTitle"
            android:text="Download"
            app:drawableTopCompat="@drawable/ic_download" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goto_scan"
            style="@style/MainTitle"
            android:text="Scanner"
            app:drawableTopCompat="@drawable/ic_main_barcode_scan" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goto_loyalty"
            style="@style/MainTitle"
            android:text="Loyalty Cards"
            app:drawableTopCompat="@drawable/ic_qr_code" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goto_stats"
            style="@style/MainTitle"
            android:text="Stats"
            app:drawableTopCompat="@drawable/ic_main_stats" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>